<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/main_info_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/sub_item_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/sub_item_horizontal_margin</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="text_question">
        <item name="android:layout_marginTop">@dimen/item_vertical_margin</item>>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
